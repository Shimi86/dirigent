<?xml version="1.0" encoding="UTF-8"?>
<!-- this a local dirigent agen't config file -->
<Local>
  <!-- watching for new crash dump !-->
  <FolderWatcher
      Path = "CrashDumps"
      IncludeSubdirs="false"
      Conditions="NewFile"
      Filter = "*.dmp"
      >
      <!-- what to do if change detected -->
      <Action Type="StartPlan" PlanName="CollectLogs"/>
      <!--Action Type="LaunchApp" AppIdTuple="DevelStation.LogCollector"/-->
  </FolderWatcher>


  <!-- This is similar to the App in shared config. Tools run always on local machine.
       The CmdLineArgs specified here can be overridden by ToolActionDef's Args="xxx" attribute.
       
       If the tool is assigned a network service, the SVC_IP and SVC_PORT variables hold the network
       settings for accessing the service. -->
  <Tool
    AppIdTuple = "Explorer"
    IconFile = "Icons\Explorer.png"
    Service = ""
    ExeFullPath = "%SystemRoot%\explorer.exe"
    CmdLineArgs = "%FILE_PATH%"
    StartupDir = ""
  />

  <Tool
    AppIdTuple = "VncViewer"
    IconFile = "Icons\VNC.png"
    Service = "VNC"
    ExeFullPath = "%ProgramW6432%\TightVNC\tvnviewer_mouse_pan_zoom.exe"
    CmdLineArgs = "%MACHINE_IP%"
    StartupDir = ""
  />

  <Tool
    AppIdTuple = "Notepad"
    IconFile = "Icons\Notepad.png"
    Service = ""
    ExeFullPath = "%ProgramW6432%\Notepad++\notepad++.exe"
    CmdLineArgs = "%FILE_PATH%"
    StartupDir = ""
  />

  <Tool
    AppIdTuple = "DoubleCommander"
    IconFile = "Icons\DoubleCommander.png"
    Service = ""
    ExeFullPath = "%DIRIGENT_BIN%\tools\doublecmd\doublecmd.exe"
    StartupDir = ""
  />

  <DefaultMachineActions>
    <Tool Title="BLA Do something with the machine" Name="Notepad" Args="%MACHINE_ID%"/>
  </DefaultMachineActions>

  <DefaultAppActions>
    <Tool Title="BLA Do something with the app++" Name="Notepad" Args="%APP_ID%"/>
  </DefaultAppActions>


  <!-- These are added to each file's context menu -->
  <DefaultFileActions>
    <Tool Title="BLA Edit in Notepad++" Name="Notepad" Args="%FILE_PATH%"/>
    <Script Title="Download zipped file" Name="BuiltIns/DownloadZipped.cs" />
  </DefaultFileActions>

  <!-- These are added to each file pakage's context menu -->
  <DefaultFilePackageActions>
    <Script Title="BLA Browse with DoubleCmd" Name="Builtins/BrowseInDblCmdVirtPanel.cs" />
    <Script Title="Download zipped package" Name="BuiltIns/DownloadZipped.cs" />
  </DefaultFilePackageActions>

</Local>
